<html>
  <style>
    <%= Pygments.css('.highlight', style: 'monokai') %>
  </style>
  <head>
    <title>Marrow</title>
    <link rel="stylesheet" type="text/css" href="../../../../style.css">
  </head>
  <body>
    <h1>MARROW</h1>
    <div class="menu">
      <% if @@user != nil %>
        <a class="menuButton" href="/marrows/list_marrows">Your marrows</a>
        <a class="menuButton" href="/users/news">News</a>
        <a class="menuButton" href="/users/following">People you follow</a>
      <% end %>
      <a class="menuButton" href="/marrows/browse/all_marrows">Browse</a>
      <a class="menuButton" href="/marrows/browse/popular_marrows">Popular</a>
      <% if @@user == nil %>
        <a class="menuButton" href="/users/login">Login</a>
      <% else %>
        <a class="menuButton" href="/users/logout">Logout</a>
      <% end %>
    </div>
  <%= yield %>
  </body>
</html>